<%= simple_form_for [@group, @post] do |f| %>

<% if @post.errors.any? %>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li> <%= msg %> </li>
  <% end %>
</ul>
<% end %>

<div class="form-group">
  <%= f.input :content, input_html: { class: "form-control" } %>
</div>

<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>

<% end %>
