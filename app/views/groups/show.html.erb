<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@group) %>

        <label class="label label-success"> Member of the group </label>
        <%= link_to("Quit group", quit_group_path(@group), method: :post, class: "btn btn-default") %>

      <% else %>

        <label class="label label-warning"> Not a member of the group </label>
        <%= link_to("Join group", join_group_path(@group), method: :post, class: "btn btn-default") %>

      <% end %>
    </span>


    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right") %>

    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>

  <h2>
    <%= @group.title %>
  </h2>

  <p>
    <%= @group.description %>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th> Content of the post</th>
        <th> Writer </th>
        <th> Post time </th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |p| %>
        <tr>
          <td> <%= p.content %> </td>
          <td> <%= p.user.email %> </td>
          <td> <%= p.created_at %> </td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <div class = "text-center">
    <%= will_paginate @posts %>
  </div>


</div>
